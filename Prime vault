}function login() {
    let user = document.getElementById("username").value;

    if (user === "Justinvibez001") {
        window.location.href = "creator.html";
    } else {
        localStorage.setItem("pv_user", user);
        window.location.href = "dashboard.html";
    }
}

// LOAD dashboard values
document.addEventListener("DOMContentLoaded", () => {
    if (document.getElementById("userDisplay")) {
        document.getElementById("userDisplay").innerText = localStorage.getItem("pv_user");

        document.getElementById("credits").innerText = localStorage.getItem("pv_credits") || 0;
        document.getElementById("luxury").innerText = localStorage.getItem("pv_luxury") || 0;
        document.getElementById("status").innerText = localStorage.getItem("pv_status") || 0;
        document.getElementById("rank").innerText = localStorage.getItem("pv_rank") || 0;
    }
});

// SAVE from Creator Panel
function saveData() {
    localStorage.setItem("pv_credits", document.getElementById("c_credits").value);
    localStorage.setItem("pv_luxury", document.getElementById("c_luxury").value);
    localStorage.setItem("pv_status", document.getElementById("c_status").value);
    localStorage.setItem("pv_rank", document.getElementById("c_rank").value);

    alert("Saved! Dashboard updated.");
}
